<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/l1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="@color/Black"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="433dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/klogo" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Do You Need Space ?"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="309dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0"
                android:src="@drawable/ho"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:text="Don't worry we got you covered! We'll help you get the best deals for spaces!!"
                android:textColor="@color/Black"
                android:textSize="29dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.795"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="10dp"
                android:text="Some spaces we offer"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="29dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.795"
                tools:layout_editor_absoluteX="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/i1"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/sh"
                            tools:layout_editor_absoluteX="0dp" />

                        <ImageView
                            android:id="@+id/i2"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/sec"
                            tools:layout_editor_absoluteX="0dp" />
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/si"
                            tools:layout_editor_absoluteX="0dp" />

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Our main idea behind this project is that we wish to provide readily
available spaces for different purposes catered to the requirements
of people.
\n 2. This would help in providing with small and medium scale
enterprises with affordable spaces which are available on hourly
basis.
\n 3. We also aim to provide spaces to models and influencers for
shooting purposes as well.
\n 4. It ensures convenience and efficiency in an increasingly fast-paced
society.     "
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/Black"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:layout_editor_absoluteX="380dp" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/green"
                android:text="Login"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/green"
                android:text="Categories"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/blue"
                android:text="Contact Us"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/music"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/blue1"
                android:text="Check our music"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/red"
                android:text="Rate Us"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/notify"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/red"
                android:text="Notify Me"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:backgroundTint="@color/red"
                android:text="Request for a space"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="15dp"
                android:text="A glimpse of our website."
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="29dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.795"
                tools:layout_editor_absoluteX="0dp" />
            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            </WebView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
